{
    "name": "pokeapi-multiframework-lab",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "packageManager": "bun@1.1.38",
    "engines": {
        "bun": ">=1.1.0"
    },
    "scripts": {
        "dev": "bun run --filter './apps/*' dev",
        "build": "bun run --filter './apps/*' build",
        "lint": "bun run --filter './apps/*' lint",
        "lint:fix": "bun run --filter './apps/*' lint:fix",
        "typecheck": "bun run --filter './apps/*' typecheck",
        "check": "bun run --filter './apps/*' check",
        "clean": "bun run --filter './apps/*' --filter './packages/*' clean",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue,astro,svelte}": [
            "bun run lint:fix"
        ],
        "*.{css,less,scss}": [
            "bun run lint:fix"
        ],
        "*.html": [
            "bun run lint:fix"
        ],
        "*.md": [
            "bun run lint:fix"
        ]
    },
    "devDependencies": {
        "@types/bun": "latest",
        "eslint": "^9.39.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7"
    }
}
