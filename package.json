{
    "name": "pokeapi-multiframework-lab",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "packageManager": "bun@1.1.38",
    "engines": {
        "bun": ">=1.1.0"
    },
    "scripts": {
        "dev": "bun run --filter './apps/*' dev",
        "build": "bun run --filter './apps/*' build",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "clean": "bun run --filter './apps/*' --filter './packages/*' clean",
        "prepare": "husky"
    },
    "devDependencies": {
        "@antfu/eslint-config": "latest",
        "@types/bun": "latest",
        "eslint": "^9.39.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7"
    }
}
